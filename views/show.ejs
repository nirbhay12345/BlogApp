<%- include('partials/header') %>

<div class="ui container main big text">
  <div class="ui huge header">
    <%- blog.title %>
  </div>
  <div class="ui top attached very padded stacked segment">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div><br>
      <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>

      <form id="delete" class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
          <button class="ui red basic button" type="submit" name="button">Delete</button>
          <a class="ui black basic button" href="/blogs">Back</a>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
