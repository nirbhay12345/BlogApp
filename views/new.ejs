<%- include('partials/header') %>

<div class="ui container main big text segment">
  <div class="ui huge header">
    New Post
  </div>
  <form class="ui form" action="/blogs" method="post">
    <div class="feilds">
      <label>Title</label>
      <input type="text" name="blog[title]" required placeholder="title">
    </div>
    <div class="feilds">
      <label>Image</label>
      <input type="text" name="blog[image]" required placeholder="image url">
    </div>
    <div class="feilds">
      <label>Content</label>
      <textarea name="blog[body]" rows="8" cols="80" required placeholder="blog post goes here"></textarea>
    </div><br>
    <div class="feilds">
      <button class="ui black basic big button" type="submit">Submit</button>
      <a class="ui black basic big button" href="/blogs">Back</a>
    </div>
  </form>
</div>


<%- include('partials/footer') %>
